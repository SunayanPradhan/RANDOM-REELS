<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sunayanpradhan.randomreels">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo_transparent"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo_rounded"
        android:supportsRtl="true"
        android:theme="@style/Theme.RANDOMREELS">
        <activity
            android:name=".Activities.SplashScreenActivity"
            android:exported="false" />
        

        <activity
            android:name=".Activities.AddActivity"
            android:exported="false" />
        <activity
            android:name=".Activities.ViewProfileActivity"
            android:exported="false" />
        <activity
            android:name=".Activities.SearchActivity"
            android:exported="false" />
        <activity
            android:name=".Activities.EditReelsActivity"
            android:exported="false" />
        <activity
            android:name=".Activities.ReelsViewActivity"
            android:exported="false" />
        <activity
            android:name=".Activities.LogInActivity"
            android:exported="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activities.MainActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
    </application>

</manifest>